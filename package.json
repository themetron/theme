{
  "name": "@themetron/theme",
  "version": "0.0.0",
  "description": "Base theme composition utilities to go from theme flavor hints to fully-defined theme objects.",
  "author": "pixelbandito",
  "license": "MIT",
  "repository": "themetron/theme",
  "source": "src/index.js",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "unpkg": "dist/index.umd.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle",
    "start": "microbundle --watch",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/eslint-parser": "^7.13.10",
    "@babel/plugin-proposal-export-default-from": "^7.12.13",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.13.8",
    "@babel/plugin-proposal-optional-chaining": "^7.13.12",
    "@babel/plugin-syntax-optional-chaining": "^7.8.3",
    "@babel/preset-env": "^7.13.12",
    "@jest/globals": "^26.6.2",
    "babel-jest": "^26.6.3",
    "eslint": "^7.22.0",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-react": "^7.23.0",
    "jest": "^26.6.3",
    "jest-expect-message": "^1.0.2",
    "microbundle": "^0.13.0"
  },
  "dependencies": {
    "color-convert": "^2.0.1"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.?(m)js?(x)",
      "**/?(*.)(spec|test).?(m)js?(x)"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node",
      "mjs"
    ],
    "transform": {
      "^.+\\.m?js$": "babel-jest"
    }
  }
}
